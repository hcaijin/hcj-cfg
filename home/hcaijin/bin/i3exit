#!/bin/sh

case "$1" in
    lock)
        i3lock -c 000000
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        sudo -i pm-suspend | i3lock -c 000000
        ;;
    hibernate)
        sudo -i pm-hibernate
        ;;
    reboot)
        sudo -i reboot
        ;;
    shutdown)
        sudo -i poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
